<!-- boilerplate with ejs-mate -->
<!DOCTYPE html>
<html lang="en">
   <head>
      <meta charset="UTF-8" />
      <meta http-equiv="X-UA-Compatible" content="IE=edge" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      <title>CAMPEX</title>

      <!-- bootstrap v5 -->
      <link
         href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css"
         rel="stylesheet"
         integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0"
         crossorigin="anonymous"
      />

      <!-- mapbox GL JS files -->
      <script src="https://api.mapbox.com/mapbox-gl-js/v2.1.1/mapbox-gl.js"></script>
      <link href="https://api.mapbox.com/mapbox-gl-js/v2.1.1/mapbox-gl.css" rel="stylesheet" />

      <!-- custom css -->
      <link rel="stylesheet" href="/stylesheets/app.css" />
   </head>

   <!-- including bootstrap flexbox
    display flex, make column, body heigh 100 -->
   <body class="d-flex flex-column vh-100">
      <!-- including navbar partial -->
      <%- include('../partials/navbar') %>

      <main class="container mt-5">
         <!-- added flash.js -->
         <%- include('../partials/flash') %>
         <!-- MAIN BODY -->
         <%- body %>
      </main>

      <!-- bootstrap js -->
      <script
         src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"
         integrity="sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8"
         crossorigin="anonymous"
      ></script>

      <!-- including footer partial -->
      <%- include('../partials/footer') %>

      <!-- copied js data from bootstrap validation. -->
      <script>
         // Example starter JavaScript for disabling form submissions if there are invalid fields
         (function () {
            "use strict";

            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            // changing class to our custom class of form
            const forms = document.querySelectorAll(".validated-form");

            // Loop over them and prevent submission
            Array.from(forms).forEach(function (form) {
               form.addEventListener(
                  "submit",
                  function (event) {
                     if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                     }

                     form.classList.add("was-validated");
                  },
                  false
               );
            });
         })();
      </script>
   </body>
</html>
